<%= form_for @recipe do |f| %>
    <%= f.label :recipe_title %>
    <%= f.text_field :title %>
    <br/>
    
    <%= f.fields_for :ingredients do |inner_form| %>
      <%= inner_form.label :ingredient_name %>
      <%= inner_form.text_field :name %><br/>

     <%= inner_form.label :ingredient_quantity %>
     <%= inner_form.text_field :quantity %><br/>
    <% end %>
    
    <%= f.submit %>
    
<% end%>
